# SiliconFlow API 配置
# 从 https://siliconflow.cn/ 获取 API Key
SILICONFLOW_API_KEY=your_api_key_here

# API 基础 URL（可选，默认使用硅流服务）
# API_BASE_URL=https://api.siliconflow.cn/v1

# 服务端口（可选，默认 5000）
PORT=5000

# 调试模式（可选，true/false）
FLASK_DEBUG=false

# 最大并发任务数（可选，默认 3）
MAX_CONCURRENT_TASKS=3

# VAD 敏感度阈值（可选，默认 0.5）
# 范围 0.1-0.9，数值越高越敏感
VAD_THRESHOLD=0.5

# 合并短段落阈值（秒，可选，默认 1.0）
# 小于此长度的段落会被合并
MERGE_THRESHOLD=1.0
